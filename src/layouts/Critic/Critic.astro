<div class="card-body">
    <div class="content-group">
        <div id="respond" class="comment-respond">
            <h3 id="reply-title" class="title-critic overflow-hidden">
                Kirim Masukan
            </h3>
            <div class="line-3" style="position: relative;display:grid;">
                <hr />
            </div>
            <form id="commentform" class="comment-form" action="" method="">
                <div class="row row-critic">
                    <div class="coloumn-name col-lg-5">
                        <p class="comment-form-comment">
                            <label class="tab-name" for="comment"
                                >Nama<span class="star">*</span>

                                <br />
                                <input
                                    class="form"
                                    id="author"
                                    name="author"
                                    type="text"
                                    value=""
                                    size="30"
                                    required="required"
                                />
                            </label>
                        </p>
                    </div>
                    <div class="coloumn-email col-lg-5">
                        <p class="comment-form-comment">
                            <label class="tab-email" for="comment"
                                >E-mail<span class="star">*</span><br />
                                <input
                                    class="form"
                                    id="author"
                                    name="author"
                                    type="text"
                                    value=""
                                    size="30"
                                    required="required"
                                /></label
                            >
                        </p>
                    </div>
                    <div class="coloumn-telp col-lg-5">
                        <p class="comment-form-comment">
                            <label class="tab-telp" for="comment"
                                >Nomor Telepon<span class="star">*</span><br />
                                <input
                                    class="form"
                                    id="author"
                                    name="author"
                                    type="text"
                                    value=""
                                    size="30"
                                    required="required"
                                /></label
                            >
                        </p>
                    </div>
                </div>
                <div class="row row-comment">
                    <p class="comment-form-comment">
                        <label for="comment"
                            >Pesan atau masukan yang ingin kamu sampaikan?</label
                        >
                        <br />
                        <textarea
                            class="coloumn-comment"
                            name="comment"
                            id="comment"
                            cols="30"
                            rows="5"></textarea>
                    </p>
                    <p class="form-submit">
                        <input
                            id="submit"
                            class="submit"
                            name="submit"
                            type="submit"
                            value="Kirim"
                        />
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

